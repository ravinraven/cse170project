<link href="/css/map.css" rel="stylesheet">

<div class="map">
<!-- <div id="name"> {{beachname}} </div> -->
<div id="maptitle"> Map View </div>
<div id="beachAddress"> </div>  
<div id="mapdata"> </div>


</div>



<style type="text/css">

  #maptitle{
    font-size:30px;
  }
  #beachAddress{
    font-size:20px;
    text-align:center;
    padding-bottom:7px;
  }
  #mapdata img{
    
    width:70%;
    height:70%;
  }
</style>

<script> 
function getMap(){
	var location;
	var name = "{{beachname}}"
	if(name == "LaJolla")
    	location = "/images/LJSMap.png"; //la jolla 
	else if(name == "Oceanside")
    	location = "/images/OBMap.png";
  	else if(name == "PacificBeach")
    	location = "/images/PBmap.png";
  	else if(name == "Coronado")
    	location = "/images/CorMap.png";
  	else if(name == "MissionBay")
    	location = "/images/MsMap.png";
	var tag = "<img src=\"" + location +"\" >";
	$("div #mapdata").html(tag);
}
getMap();

getAddress();
function getAddress(){
	var location;
	var name = "{{beachname}}"
	if(name == "LaJolla")
    	location = "8200 Camino del Oro, La Jolla, 92037"; //la jolla 
	else if(name == "Oceanside")
    	location = " 5059 Newport Ave, San Diego, 92107";
  	else if(name == "PacificBeach")
    	location = "4500 Ocean Ave, San Diego, 92109";
  	else if(name == "Coronado")
    	location = "1800 Avenida de las Arenas, Coronado, 92118";
  	else if(name == "MissionBay")
    	location = "3448 Crown Point Drive, San Diego, 92109";

    var tag = "<p>" + location + "</p>";
    $("div #beachAddress").html(tag);
  
}
</script>