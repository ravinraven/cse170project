<script type="text/javascript">
//prototypes and declarations
var expansion = 0;
function allShow(){
$("#home").show();
$("#home").show();
$("#map").show();
$("#activity").show();
$("#crowd").show();
$("#alert").show();
$("#help").show();
}
function allHide(){
$("#home").hide();
$("#map").hide();
$("#activity").hide();
$("#crowd").hide();
$("#alert").hide();
$("#help").hide();
}

//may not work with different type of browsers
function expandSidebar(){
	console.log("clickable");
	if(expansion == 0){
	//$(".sidebar").css({width:'200px', background:"white"});
	$(".sidebar").css({animation: "slideout 1s", width:'150px', background:"white"});
	window.setTimeout('allShow()', 800);
	$(".sbcontent").css({"z-index":'-1',"position":"relative",});
	expansion = 1;
	}else{
	allHide();
	$(".sidebar").css({animation: "slidein 1s", width:'50px'});
	window.setTimeout(function(){$(".sidebar").css({width:'50px', background:"#00C9AD"});}, 1000);
	$(".sbcontent").css({"position":"relative", "z-index":"1"});
	expansion = 0;
	}
}

allHide(); //call default

$( document ).ready(function() {
	$(".sidebar").click( function(){ expandSidebar(); } );
	$("#back a").click(function() { window.location.href="/"; });
	$("#login a").click( function(){ loadMainContent("LOGIN") });
	$("#help a").click(function() { loadMainContent("HELP"); }); 
	});
</script>
